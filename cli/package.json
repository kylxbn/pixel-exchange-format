{
    "name": "@pixel-exchange-format/cli",
    "version": "1.0.0",
    "description": "PXF CLI",
    "main": "dist/index.cjs",
    "type": "module",
    "bin": {
        "pxf": "./dist/index.cjs"
    },
    "scripts": {
        "build": "rimraf dist && tsc && esbuild src/index.ts --bundle --format=cjs --platform=node --external:sharp --external:node-addon-api --external:node-gyp --minify --outfile=dist/index.cjs",
        "watch": "tsc -w"
    },
    "dependencies": {
        "@pixel-exchange-format/codec": "file:../codec",
        "@pixel-exchange-format/jpeg-decoder": "file:../jpeg-decoder",
        "commander": "^12.1.0",
        "node-addon-api": "^8.5.0",
        "node-gyp": "^12.1.0",
        "sharp": "^0.34.5"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "esbuild": "^0.27.2",
        "rimraf": "^6.1.2",
        "typescript": "^5.5.0"
    }
}
